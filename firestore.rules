rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ========== Helper Functions ==========
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Admin con soporte a 'rol' y 'role'
    function isAdmin() {
      return isAuthenticated() &&
             (
               get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'admin' ||
               get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin'
             );
    }

    // Proveedor/Supplier con soporte a 'rol' y 'role'
    function isSupplier() {
      return isAuthenticated() &&
             (
               get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.rol == 'proveedor' ||
               get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'proveedor'
             );
    }

    // ========== Payouts Collection (Solicitudes de Cobro) ==========
    match /payouts/{payoutId} {
      allow create: if isAuthenticated()
                    && request.resource.data.userId == request.auth.uid
                    && request.resource.data.amount is number
                    && request.resource.data.amount > 0
                    && request.resource.data.status == 'scheduled';

      allow read: if isAdmin() || (isAuthenticated() && resource.data.userId == request.auth.uid);

      allow update, delete: if isAdmin();
    }

    // ========== Usuarios Collection ==========
    match /usuarios/{userId} {

      // ⚠️ Permitir lectura pública: recomendable limitar campos con reglas AppCheck o cambios futuros
      allow read: if true;

      // Crear: permitido para registro (sin auth) o si el uid coincide
      allow create: if true;

      // Actualizar / Eliminar: solo dueño o admin
      allow update, delete: if isOwner(userId) || isAdmin();

      // Subcolección de transacciones
      match /transactions/{txId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ========== Distribuidores Collection ==========
    match /distribuidores/{docId} {
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.uid;

      allow read: if isAuthenticated();

      allow update, delete: if isAuthenticated() && request.auth.uid == resource.data.uid;
    }

    // ========== Orders Collection ==========
    match /orders/{orderId} {
      allow create: if isAuthenticated()
                    && request.auth.uid == request.resource.data.buyerUid;

      allow read: if isAuthenticated() &&
                  (request.auth.uid == resource.data.buyerUid || isAdmin() || isSupplier());

      allow update: if isAuthenticated() &&
                    (request.auth.uid == resource.data.buyerUid || isAdmin());

      allow delete: if isAdmin();
    }

    // ========== Users Collection (Alternativa) ==========
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      match /transactions/{txId} {
        allow read, write: if isOwner(userId);
      }
    }

    // ========== Productos Collection ==========
    match /productos/{productId} {
      allow read: if true;
      
      allow create, update, delete: if isAdmin();
    }

    // ========== Inventory Collection ==========
    match /inventory/{inventoryId} {
      allow read: if isAuthenticated();
      
      allow create, update, delete: if isAdmin();
    }

    // ========== Categorias Collection ==========
    match /categorias/{categoriaId} {
      allow read: if true;

      allow create, update, delete: if isAdmin();
    }

    // ========== Commissions Purged Collection (Admin Reports) ==========
    match /commissionsPurged/{reportId} {
      // Only admins can read purge reports
      allow read: if isAdmin();

      // Only server-side functions should write (no client writes)
      allow create, update, delete: if false;
    }

    // ========== Denegar todo lo demás ==========
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
